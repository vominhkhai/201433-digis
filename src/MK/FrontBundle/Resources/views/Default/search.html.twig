{% javascripts 'bundles/mkfront/js/jquery-2.1.1.min.js' %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
        
<form method="post" id="form-filter" />
{{ form_row(formSearch) }}
<input type="submit" value="Tìm kiếm" />
</form>


{% if (request.isMethod("POST")) %}
    {% for product in resultSearch %}
        <div style="float:left; width: 200px">
            <img src="{{ asset(product.getThumbImage()) }}" width="100" />
            <br />
            {{ product.title }} <br />
            {{ product.price }} <br />
        </div>
        
    {% else %}
        Không có sản phẩm nào
    {% endfor %}
{% endif %}
