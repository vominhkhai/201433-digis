{% extends "MKAdminBundle::pagelayout.html.twig" %}

{% block contentHeader %}
    <section class="content-header">
    <h1>
        Languge
        <small>List language</small>
    </h1>
</section>
{% endblock %}



{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body table-responsive">
                    <div role="grid" class="dataTables_wrapper form-inline" id="example1_wrapper">
                        {% include('MKAdminBundle:Common:show_message.html.twig') %}
                        <div class="row">
                            <div class="col-xs-6">
                                <div id="example1_length" class="dataTables_length">
                                    <a class="btn btn-primary btn-flat" href="{{ path('mk_admin_language_add') }}">Add new Language</a>
                                </div>
                            </div>
                            <div class="col-xs-6">
          
                            </div>
                        </div>
                        <table class="table table-bordered table-striped dataTable" id="example1" aria-describedby="example1_info">
                            <thead>
                                <tr role="row">
                                    <th class="sorting" role="columnheader" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 238px;" aria-label="Rendering engine: activate to sort column ascending">{{ "language.form.id"|trans({}, 'admin_messages', 'MKAdminBundle') }}</th>
                                    <th class="sorting" role="columnheader" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 341px;" aria-label="Browser: activate to sort column ascending">{{ "language.form.name"|trans({}, 'admin_messages', 'MKAdminBundle') }}</th>
                                    <th class="sorting_asc" role="columnheader" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 305px;" aria-sort="ascending" aria-label="Platform(s): activate to sort column descending">{{ "language.form.langKey"|trans({}, 'admin_messages', 'MKAdminBundle') }}</th>
                                    <th class="sorting" role="columnheader" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 202px;" aria-label="Engine version: activate to sort column ascending">{{ "language.form.defaultFrontend"|trans({}, 'admin_messages', 'MKAdminBundle') }}</th>
                                    <th class="sorting" role="columnheader" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 202px;" aria-label="Engine version: activate to sort column ascending">{{ "language.form.defaultBackend"|trans({}, 'admin_messages', 'MKAdminBundle') }}</th>
                                    <th role="columnheader" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 202px;" aria-label="Engine version: activate to sort column ascending">{{ "form.action"|trans({}, 'admin_messages', 'MKAdminBundle') }}</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th rowspan="1" colspan="1">{{ "language.form.id"|trans({}, 'admin_messages', 'MKAdminBundle') }}</th>
                                    <th rowspan="1" colspan="1">{{ "language.form.name"|trans({}, 'admin_messages', 'MKAdminBundle') }}</th>
                                    <th rowspan="1" colspan="1">{{ "language.form.langKey"|trans({}, 'admin_messages', 'MKAdminBundle') }}</th>
                                    <th rowspan="1" colspan="1">{{ "language.form.defaultFrontend"|trans({}, 'admin_messages', 'MKAdminBundle') }}</th>
                                    <th rowspan="1" colspan="1">{{ "language.form.defaultBackend"|trans({}, 'admin_messages', 'MKAdminBundle') }}</th>
                                    <th rowspan="1" colspan="1">{{ "form.action"|trans({}, 'admin_messages', 'MKAdminBundle') }}</th>
                            </tfoot>
                            <tbody role="alert" aria-live="polite" aria-relevant="all">
                                {% for language in listLanguage %}
                                    <tr class="odd">
                                        <td class="">{{ language.id }}</td>
                                        <td class="">{{ language.name }}</td>
                                        <td class=" sorting_1">{{ language.langKey }}</td>
                                        <td class=""><a href="{{ path('mk_admin_language_set_default_front_end', {'languageId': language.id}) }}">{% if (language.isDefaultFrontend) %}<i class="fa fa-star"></i>{%else%}<i class="fa fa-star-o"></i>{%endif%}</a></td>
                                        <td class=""><a href="{{ path('mk_admin_language_set_default_back_end', {'languageId': language.id}) }}">{% if (language.isDefaultBackend) %}<i class="fa fa-star"></i>{%else%}<i class="fa fa-star-o"></i>{%endif%}</a></td>
                                        <td class="">
                                            <a class="btn btn-info" href="{{ path('mk_admin_language_edit', {'languageId': language.id}) }}">Edit</a>
                                            <a class="btn btn-danger" href="{{ path('mk_admin_language_delete', {'languageId': language.id}) }}">Delete</a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="5" align="center">There are no language</td>
                                    </tr>
                                {% endfor %}    
                            </tbody>
                        </table>
                    </div>
                </div><!-- /.box-body -->
            </div>
        </div>
    </div>

{% endblock %}